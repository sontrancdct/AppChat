<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".view.LoginActivity">

   <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true">

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

         <ImageView
            android:id="@+id/login_image"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/clipboard"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

         <LinearLayout
            android:layout_below="@id/login_image"
            android:id="@+id/container_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">
            <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:background="@drawable/mail"/>
            <EditText
               android:layout_marginLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:id="@+id/edt_register_email"
               android:background="@drawable/custom_bg"
               android:inputType="textEmailAddress"
               android:padding="4dp"
               android:hint="Email..." />
         </LinearLayout>
         <LinearLayout
            android:layout_below="@id/container_email"
            android:id="@+id/container_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">
            <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:background="@drawable/password"/>
            <EditText
               android:layout_marginLeft="10dp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:id="@+id/edt_register_pass"
               android:background="@drawable/custom_bg"
               android:inputType="textPassword"
               android:padding="4dp"
               android:hint="Password..." />
         </LinearLayout>
         <LinearLayout
            android:id="@+id/container_btn_login"
            android:layout_marginTop="10dp"
            android:layout_below="@id/container_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
               android:text="Create Account"
               android:id="@+id/btn_register"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="4dp"
               android:background="@drawable/buttons"
               android:textAllCaps="false"
               android:textSize="24sp"
               android:textColor="#ffffff"/>
         </LinearLayout>
         <TextView
            android:id="@+id/tv_already_have_an_account"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@id/container_btn_login"
            android:text="Already have an account ?"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
      </RelativeLayout>
   </ScrollView>
</RelativeLayout>